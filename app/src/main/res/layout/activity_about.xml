<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        android:background="@color/qmui_config_color_transparent"
        />

    <ImageView
        android:id="@+id/logoIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_app"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="#333333"
        />
    <TextView
        android:id="@+id/versionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0.0"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="#999999"
        />

    <com.csj.bestidphoto.view.HorizontalCommonMenu
        android:id="@+id/policyHcm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="@dimen/dp_10"
        app:menuText="隐私政策" />

    <com.csj.bestidphoto.view.HorizontalCommonMenu
        android:id="@+id/userProHcm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/dp_10"
        app:menuText="用户协议" />

    <com.csj.bestidphoto.view.HorizontalCommonMenu
        android:id="@+id/aboutHcm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/dp_10"
        app:menuText="关于我们" />

    <com.csj.bestidphoto.view.HorizontalCommonMenu
        android:id="@+id/contactUsHcm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/dp_10"
        app:menuText="联系我们" />

</LinearLayout>
